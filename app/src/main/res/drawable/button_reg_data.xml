<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <layer-list>
            <!--            <item android:drawable="@drawable/ic_vector1"></item>-->
            <item>
                <shape>
                    <gradient android:startColor="#4DF1F4F4" android:endColor="#80609AFF"  android:angle="-90.0"/>
                    <stroke android:width="2dp" android:color="#66520CE8" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />

                </shape>
            </item>
            <item>
                <scale android:drawable="@drawable/ic_vector1" android:scaleHeight="50" android:scaleWidth="50"></scale>
            </item>
            <item>
                <scale android:drawable="@drawable/ic_vector1" android:scaleHeight="50" android:scaleWidth="50"></scale>
            </item>
        </layer-list>
    </item>


    <item android:state_enabled="true">
        <layer-list>
            <item>
                <scale android:drawable="@drawable/ic_vector1" android:scaleHeight="50" android:scaleWidth="50"></scale>
            </item>
            <!--            <item android:drawable="@drawable/ic_vector1"></item>-->
            <item>
                <shape>
                    <gradient android:startColor="#80F5F4FA" android:endColor="#4DF063FF"  android:angle="-90.0"/>
                    <stroke android:width="1dp" android:color="#66520CE8" />
                    <corners android:radius="8dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item android:drawable="@drawable/ic_vector1"></item>
            <item>
                <shape>
                    <gradient android:startColor="#FFEB3B" android:endColor="#1A423E"  android:angle="-90.0"/>
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>